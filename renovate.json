{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "group:allNonMajor",
        "config:recommended",
        "docker:pinDigests",
        "docker:enableMajor",
        "customManagers:dockerfileVersions",
        ":label(renovate)",
        ":separateMajorReleases",
        ":preserveSemverRanges",
        ":semanticCommitsDisabled"
    ],
    "circleci": {
        "fileMatch": [
            "(^|/).circleci/config.yml$"
        ],
        "packageRules": [
            {
                "matchPackageNames": [
                    "cimg/base"
                ],
                "versioning": "regex:^current-(?<major>\\d+)\\.(?<minor>\\d+)$"
            }
        ]
    },
    "customManagers": [
        {
            "customType": "regex",
            "description": "Custom package manager for docker-image key in .circleci/config.yml as it is used in codeql/code-scan jobs.",
            "fileMatch": [
                "^.circleci/config.yml$",
                "(^|/).circleci/config-cimg-base.yml$"
            ],
            "matchStrings": [
                "docker-image:\\s+(?<depName>.*?):(?<currentValue>[^\\s@-]+)(?:@(?<currentDigest>sha256:[a-f0-9]{64}))?"
            ],
            "datasourceTemplate": "docker",
            "extractVersionTemplate": "{{#if currentValue}}{{currentValue}}{{/if}}{{#if currentDigest}}@{{currentDigest}}{{/if}}"
        }
    ]
}
